<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"

        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/id_moviesPopular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_reduce"
            android:scaleType="fitXY"

            tools:srcCompat="@tools:sample/avatars"/>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_moviesPopular"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:scrollbars="horizontal"
                android:fontFamily="@font/poppins_medium"

                android:text="Name of movie "
                android:textColor="#4A4B4D"
                android:textSize="@dimen/_15ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_3sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="10 /"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />
                <TextView
                    android:id="@+id/rating_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metrophobic"
                    android:text=" 5.6"
                    android:textColor="@color/colorprimary"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>
            <TextView
                android:id="@+id/typeof_movies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metrophobic"
                android:text="Languages"
                android:textColor="#B6B7B7"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_20ssp" />



        </LinearLayout>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/imgFav_popular"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:pointerIcon="top_left_diagonal_double_arrow"

            android:layout_gravity="center|end"
            android:src="@drawable/ic_heart"  />
    </LinearLayout>


</LinearLayout>